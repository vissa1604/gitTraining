<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%5level) %cyan(%-36logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>
    <include resource="logback-${ENVIRONMENT:-local}.xml"/>
</configuration>
